<article class="bc-card" id="<%= dom_id(book_category) %>">
  <h3 class="bc-card-title"><%= highlight(book_category.name, params[:keyword]) %></h3>

  <% if book_category.created_at.present? %>
    <div class="bc-card-meta">Created: <%= l(book_category.created_at.in_time_zone('Asia/Ho_Chi_Minh'), format: :short) %></div>
  <% end %>

  <div class="bc-card-actions">
    <%= link_to "Show", book_category_path(book_category), class: "btn btn-outline" %>
    <%= link_to "Edit", edit_book_category_path(book_category), class: "btn btn-primary" %>
  </div>
</article>

